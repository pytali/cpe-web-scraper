{
  "name": "cpe-web-scraper",
  "version": "1.0.0",
  "description": "A simple web scraper using Puppeteer and IXC API Integration",
  "scripts": {
    "start": "tsc && node dist/main.js",
    "setup": "tsc scripts/setup.ts && node scripts/setup.js",
    "postinstall": "npm run setup",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "NODE_ENV=development ts-node src/main.ts",
    "build": "tsc",
    "start:prod": "NODE_ENV=production node dist/main.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.8.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "csv-parser": "^3.2.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.3.1",
    "puppeteer": "^24.3.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-user-preferences": "^2.4.1",
    "zod": "^3.22.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
